  title = "biomonitoR: an R package for managing ecological data and calculating biomonitoring indices.",
  author       = personList(as.person("Alex Laini"), as.person("Simone Guareschi"), as.person("Rossano Bolpagni"), as.person("Gemma Burgazzi"), as.person("Daniel Bruno"), as.person("Cayetano Gutiérrez-Cánovas"), as.person("Rafael Miranda"), as.person("Cédric Mondy"), as.person("Gábor Várbíró"), as.person("Tommaso Cancellario")),
  year         = "2022",
  journal    = "PeerJ",
  volume = "10",
  pages = "e14183",
  doi = "doi.org/10.7717/peerj.14183",

  textVersion  =
  paste("Laini A, Guareschi S, Bolpagni R, Burgazzi G, Bruno D, Gutiérrez-Cánovas C, Miranda R, Mondy C, Várbíró G, Cancellario T. 2022. biomonitoR: an R package for managing ecological data and calculating biomonitoring indices. PeerJ 10:e14183 https://doi.org/10.7717/peerj.14183")
)


